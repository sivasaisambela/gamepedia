@model IEnumerable<CoverType>

@*@if (TempData["success"] != null) { 
    <h5>@TempData["success"]</h5>
}*@


    <div class="container p-3">
        <div class="col-6">
            <h2 class="text-primary"></h2>
        </div>
        <div class="col-6" style="margin-left:920px">
             <button type="button" class="btn btn-primary"  onclick="location.href='@Url.Action("Create", "CoverType")'"><i class="bi bi-plus-circle"></i> Create New Item</button>
             
        </div>
    </div>
<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>Cover Type</th>
           
            <th></th>
        </tr>
        
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr >
                <td width="40%">@obj.Name</td>
           
             
                @*<td width ="30%"></td>*@

                <td><div class="w-75 btn-group" role="group">
    <a asp-controller="CoverType" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-4"><i class="bi bi-pencil-square"></i>Edit</a>
    <a asp-controller="CoverType" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-4"><i class="bi bi-trash3"></i>Delete</a>
</div>
                </td>
            </tr>
        }
    </tbody>
</table>